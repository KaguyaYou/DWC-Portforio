<% if vtuber.favorited_by?(current_user) %>
  <%= link_to vtuber_favorites_path(vtuber), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= vtuber.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to vtuber_favorites_path(vtuber), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= vtuber.favorites.count %> いいね
  <% end %>
<% end %>
